<?xml version="1.0" encoding="utf-8"?>
<com.tatteam.languagerealm.app.FractionFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/window_background1"
            android:orientation="vertical">

            <include layout="@layout/toolbar"></include>

            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_4"
                card_view:cardBackgroundColor="@color/window_background"
                card_view:cardCornerRadius="@dimen/margin_2"
                card_view:cardElevation="@dimen/margin_3"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.design.widget.CoordinatorLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/margin_2"
                            android:paddingLeft="@dimen/margin_4"

                            android:paddingRight="@dimen/margin_4"
                            android:paddingTop="@dimen/margin_2"

                            android:weightSum="100"

                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="30"
                                android:orientation="horizontal"

                                >


                                <LinearLayout
                                    android:id="@+id/tittle"

                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <android.support.v7.widget.CardView

                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="@dimen/margin_6"
                                        card_view:cardBackgroundColor="?attr/colorPrimary"
                                        card_view:cardCornerRadius="@dimen/margin_2"
                                        card_view:cardElevation="@dimen/margin_3"

                                        card_view:cardUseCompatPadding="true">

                                        <RelativeLayout

                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:gravity="center"
                                                android:paddingBottom="@dimen/margin_6">

                                                <ScrollView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"

                                                    >

                                                    <LinearLayout

                                                        android:layout_width="match_parent"
                                                        android:layout_height="match_parent"
                                                        android:layout_gravity="center">

                                                        <TextView
                                                            android:id="@+id/tvPhrase"
                                                            android:layout_width="0dp"
                                                            android:layout_height="match_parent"
                                                            android:layout_marginBottom="@dimen/margin_6"
                                                            android:layout_marginLeft="@dimen/margin_16"
                                                            android:layout_marginRight="@dimen/margin_6"
                                                            android:layout_marginTop="@dimen/margin_6"
                                                            android:layout_weight="89"
                                                            android:gravity="center"
                                                            android:text="son sensdans son sens "
                                                            android:textColor="@color/white"
                                                            android:textIsSelectable="true"
                                                            android:textSize="@dimen/text_size_35"
                                                            android:textStyle="italic" />
                                                    </LinearLayout>
                                                </ScrollView>
                                            </LinearLayout>


                                        </RelativeLayout>


                                    </android.support.v7.widget.CardView>
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="70"

                                >


                                <android.support.v7.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="@dimen/margin_3"
                                    card_view:cardBackgroundColor="?attr/colorPrimary"
                                    card_view:cardCornerRadius="@dimen/margin_2"
                                    card_view:cardElevation="@dimen/margin_3"
                                    card_view:cardUseCompatPadding="true">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ScrollView
                                            android:id="@+id/scrollView"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:paddingBottom="@dimen/margin_6"
                                            android:paddingRight="@dimen/margin_6">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical"
                                                android:paddingLeft="@dimen/margin_15"
                                                android:paddingRight="@dimen/margin_6">


                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginBottom="@dimen/margin_4"
                                                    android:layout_marginTop="@dimen/margin_35"
                                                    android:text="explanation :"
                                                    android:textColor="@color/white"
                                                    android:textSize="@dimen/text_size_21"
                                                    android:textStyle="bold" />

                                                <TextView
                                                    android:id="@+id/tvExplanation"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="@dimen/margin_8"
                                                    android:layout_marginRight="@dimen/margin_6"
                                                    android:layout_marginTop="@dimen/margin_7"
                                                    android:text="OPINIÂTRETÉ : être attaché avec opiniâtreté à sa manière de voir"
                                                    android:textColor="@color/white"
                                                    android:textIsSelectable="true"
                                                    android:textSize="@dimen/text_size_25"


                                                    />


                                            </LinearLayout>
                                        </ScrollView>


                                    </RelativeLayout>
                                </android.support.v7.widget.CardView>
                            </LinearLayout>
                        </LinearLayout>

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/fab_tts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/margin_15"
                            android:src="@drawable/ic_volume_up_white_18dp"
                            app:layout_anchor="@id/tittle"
                            app:layout_anchorGravity="bottom|end" />

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/fab_web"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="@dimen/margin_15"
                            android:src="@drawable/ic_language_white_18dp"
                            app:fabSize="normal"
                            app:layout_anchor="@id/tittle"
                            app:layout_anchorGravity="bottom|start"></android.support.design.widget.FloatingActionButton>


                    </android.support.design.widget.CoordinatorLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>

</com.tatteam.languagerealm.app.FractionFrameLayout>