<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/margin_2">

    <com.andexert.library.RippleView
        android:id="@+id/rippleView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:rv_framerate="10"
        app:rv_rippleDuration="80"
        app:rv_zoom="true"
        app:rv_zoomDuration="60"
        app:rv_zoomScale="1.1">

        <android.support.v7.widget.CardView
            android:id="@+id/bg_phrase"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/margin_2"
            card_view:cardCornerRadius="@dimen/margin_2"
            card_view:cardElevation="@dimen/margin_2"
            card_view:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/tv_phrase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_7"
                android:layout_marginLeft="@dimen/margin_14"
                android:layout_marginRight="@dimen/margin_7"

                android:layout_marginTop="@dimen/margin_7"
                android:maxLines="2"
                android:text="A"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_21" />
        </android.support.v7.widget.CardView>
    </com.andexert.library.RippleView>
</RelativeLayout>

