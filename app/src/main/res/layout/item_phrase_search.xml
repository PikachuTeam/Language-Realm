<?xml version="1.0" encoding="utf-8"?>
<tatteam.com.app_common.ui.drawable.RippleEffectDark xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    android:background="@color/white"
    android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_6"
                android:layout_weight="2"></LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:gravity="center">

                <ImageView
                    android:id="@+id/icon_phrase"
                    android:layout_width="@dimen/margin_33"
                    android:layout_height="@dimen/margin_33"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:layout_marginTop="@dimen/margin_5" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/acz"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_weight="80"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_8">

                <TextView
                    android:id="@+id/tvTittleSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_2"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="Idiom"
                    android:textColor="?attr/colorPrimaryDark"
                    android:textSize="@dimen/text_size_20" />
            </LinearLayout>
        </LinearLayout>
</tatteam.com.app_common.ui.drawable.RippleEffectDark>