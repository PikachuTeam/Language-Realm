<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/list_item_favorite_character"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="@dimen/margin_1"
        card_view:cardElevation="@dimen/margin_3"
        card_view:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/tvTittle_List_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_16"
            android:singleLine="true"
            android:text="Idiom"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18" />
    </android.support.v7.widget.CardView>


    <RelativeLayout

        android:layout_width="match_parent"

        android:layout_height="match_parent">


        <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/margin_4"

            android:layout_marginRight="@dimen/margin_4"
            card_view:cardCornerRadius="@dimen/margin_2"

            card_view:cardElevation="@dimen/margin_2"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <tatteam.com.app_common.ui.drawable.RippleEffectDark
                    android:id="@+id/card_view2"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"

                            android:weightSum="100">


                            <LinearLayout
                                android:id="@+id/acz"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="85"
                                android:orientation="vertical"
                                android:padding="@dimen/margin_7">

                                <TextView
                                    android:id="@+id/tvTittle_List"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_16"
                                    android:singleLine="true"
                                    android:text="Idiom"
                                    android:textColor="?attr/colorPrimaryDark"
                                    android:textSize="@dimen/text_size_16" />

                                <TextView
                                    android:id="@+id/tvMeanning_List"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_20"
                                    android:singleLine="true"
                                    android:text="Meaning frgaga gagaggaa ff a a "
                                    android:textColor="?attr/colorPrimary"
                                    android:textSize="@dimen/text_size_14"
                                    android:textStyle="italic" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="15"
                                android:gravity="center"
                                android:paddingLeft="@dimen/margin_8">


                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </tatteam.com.app_common.ui.drawable.RippleEffectDark>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_55">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"

                        android:weightSum="100">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="85"
                            android:orientation="vertical"
                            android:padding="@dimen/margin_7">

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/favorite_icon_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="15"
                            android:gravity="center"
                            android:paddingLeft="@dimen/margin_8">

                            <ImageView
                                android:id="@+id/favorite_icon"
                                android:layout_width="@dimen/margin_25"
                                android:layout_height="@dimen/margin_25"

                                android:layout_marginTop="@dimen/margin_5" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>


        </android.support.v7.widget.CardView>


    </RelativeLayout>
</LinearLayout>